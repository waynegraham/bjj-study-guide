{# {{ collections.moves | dump | safe}} #}

<div class="container">
  <div class="mb-4">
    <h2>Filter Moves</h2>
    <div class="row">
      <div class="col-md-6">
        <label for="beltFilter" class="form-label">Belt Level:</label>
        <select id="beltFilter" class="form-select">
          <option value="all">All Belts</option>
          <option value="blue">Blue and above</option>
          <option value="purple">Purple and above</option>
          <option value="brown">Brown and above</option>
          <option value="black">Black only</option>
        </select>
      </div>
      <div class="col-md-6">
        <label for="categoryFilter" class="form-label">Category:</label>
        <select id="categoryFilter" class="form-select">
          <option value="all">All Categories</option>
          {% set allCategories = moves | map('tags') | flatten | unique | sort %}
          {% for category in allCategories %}
            <option value="{{ category }}">{{ category }}</option>
          {% endfor %}
        </select>
      </div>
    </div>
  </div>

  <div id="movesContainer" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {% for move in moves %}
      {%- set path = ['/moves/', move.name | slugify, '/'] | join %}
      <div class="col move-card" data-belt="{{ move.belt }}" data-category="{{ move.tags | join(' ') }}">
        <div class="card shadow-sm {{ move.tags | join(' ') }}">
          {# TODO: use image shortcode #}
          <a href="{{ path | url }}">
            {%- set image_path = ["https://i3.ytimg.com/vi/", move.url, "/maxresdefault.jpg"] | join %}
            {% image image_path, move.name, 'img-fluid' %}
            {# <img class="card-img-top" src="https://i3.ytimg.com/vi/{{ move.url }}/maxresdefault.jpg" alt="{{ move.name }}"> #}
          </a>
          <div class="card-body">
            <p class="card-text">{{ move.name }}</p>
            <p class="card-text">
              {%- set belt_url = ['/assets/images/BJJ_', move.belt, '_Belt.svg.png'] | join %}
              <img class="img-fluid" src="{{ belt_url | url }}" alt="{{ move.belt }} belt"></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a
                  href="{{ path | url }}"
                  class="btn btn-sm btn-outline-secondary"
                  >View</a
                >
              </div>
              <small class="text-body-secondary">{{ move.tags }}</small>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script>
  const beltOrder = ['blue', 'purple', 'brown', 'black'];
  const movesContainer = document.getElementById('movesContainer');
  const beltFilter = document.getElementById('beltFilter');
  const categoryFilter = document.getElementById('categoryFilter');

  function filterMoves() {
    const selectedBelt = beltFilter.value;
    const selectedCategory = categoryFilter.value;

    Array.from(movesContainer.children).forEach(moveCard => {
      const moveBelt = moveCard.dataset.belt;
      const moveCategories = moveCard.dataset.category.split(' ');

      const beltMatch = selectedBelt === 'all' || beltOrder.indexOf(moveBelt) >= beltOrder.indexOf(selectedBelt);
      const categoryMatch = selectedCategory === 'all' || moveCategories.includes(selectedCategory);

      moveCard.style.display = beltMatch && categoryMatch ? 'block' : 'none';
    });
  }

  beltFilter.addEventListener('change', filterMoves);
  categoryFilter.addEventListener('change', filterMoves);
</script>

